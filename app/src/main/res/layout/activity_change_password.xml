<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hcmbtsid.ui.changePassword.ChangePassword"
        android:background="@drawable/ic_background_changepassword"
>
    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/toolbar_transparent"

            android:id="@+id/appBarLayout2">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/changePassword_Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Toolbar"
                app:navigationIcon="@drawable/ic_clear"
                app:titleTextColor="@color/white"
        >
            <TextView android:text="@string/change_password"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:fontFamily="@font/poppins_black"
                      android:textStyle="bold"
                      android:textColor="#FFD0D0D0"
                      android:textSize="14sp"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="327dp" android:layout_height="35dp"
            android:background="@drawable/login_edittext_invision"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp" android:layout_marginRight="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="530dp"
            app:layout_constraintHorizontal_bias="0.509" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/layout_op">

        <ImageView android:layout_width="12dp" android:layout_height="12dp"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="252dp"
                   android:layout_marginRight="252dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                   android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="11dp" app:layout_constraintTop_toTopOf="parent"
                   app:srcCompat="@drawable/ic_username"
                   app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:textSize="@dimen/login_edittext"
                  android:background="@null"
                  android:fontFamily="@font/helvetica_neue_lt"
                  android:textColorHint="#40FFFFFF"
                  android:layout_marginStart="36dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
                  android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp" android:hint="Old Password" android:id="@+id/oldpassword"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="327dp" android:layout_height="35dp"
            android:background="@drawable/login_edittext_invision"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="126dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp" android:layout_marginRight="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="530dp"
            app:layout_constraintHorizontal_bias="0.509" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/layout_np">

        <ImageView android:layout_width="12dp" android:layout_height="12dp"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="252dp"
                   android:layout_marginRight="252dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                   android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="11dp" app:layout_constraintTop_toTopOf="parent"
                   app:srcCompat="@drawable/ic_username"
                   app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:textSize="@dimen/login_edittext"
                  android:background="@null"
                  android:fontFamily="@font/helvetica_neue_lt"
                  android:textColorHint="#40FFFFFF"
                  android:layout_marginStart="36dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
                  android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp" android:hint="Old Password" android:id="@+id/newpassword"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="327dp" android:layout_height="35dp"
            android:background="@drawable/login_edittext_invision"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="176dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp" android:layout_marginRight="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="530dp"
            app:layout_constraintHorizontal_bias="0.509" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/layout_cp">

        <ImageView android:layout_width="12dp" android:layout_height="12dp"
                   app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="252dp"
                   android:layout_marginRight="252dp" app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                   android:layout_marginBottom="12dp" app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="11dp" app:layout_constraintTop_toTopOf="parent"
                   app:srcCompat="@drawable/ic_username"
                   app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"/>

        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textColor="@color/grey"
                  android:textSize="@dimen/login_edittext"
                  android:background="@null"
                  android:fontFamily="@font/helvetica_neue_lt"
                  android:textColorHint="#40FFFFFF"
                  android:layout_marginStart="36dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
                  android:layout_marginBottom="11dp" app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp" android:hint="@string/confirm_password"
                  android:id="@+id/confirmpassword"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Save"
            android:fontFamily="@font/helvetica_neue_lt"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:id="@+id/button"
            android:background="@drawable/rounded_shape_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/appBarLayout2"
            android:layout_marginBottom="359dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginTop="246dp" android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintVertical_bias="0.252"/>


</androidx.constraintlayout.widget.ConstraintLayout>