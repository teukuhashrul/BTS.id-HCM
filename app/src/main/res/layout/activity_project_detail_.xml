<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_black_test"
        tools:context=".ui.projectDetail.ProjectDetail_Activity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/toolbar_transparent"
            android:id="@+id/appBarLayout">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/projectDetail_Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:theme="@style/Toolbar"
                app:navigationIcon="?attr/homeAsUpIndicator"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/project_detail"
                    android:textColor="@color/white"
                    android:textSize="18sp" android:textStyle="bold"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_project_detail_" tools:layout_editor_absoluteY="0dp"
             tools:layout_editor_absoluteX="16dp" android:id="@+id/include"/>
    <TextView
            android:text="Project Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textColor="@android:color/darker_gray" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" android:layout_marginEnd="236dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="236dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="December 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16"
            android:textColor="@color/white" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintHorizontal_bias="0.32"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/view"/>
    <TextView
            android:text="January 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textColor="@color/white" app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView18"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/view"/>
    <TextView
            android:text="Start Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:textColor="@android:color/darker_gray" app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.42"/>
    <TextView
            android:text="End Date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textView17"
            android:textColor="@android:color/darker_gray" app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.648"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="@android:color/darker_gray" android:text="Status" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.94" app:layout_constraintBottom_toTopOf="@+id/textView15"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="On Progress"
            android:layout_width="wrap_content"
            android:layout_margin="24dp"
            android:layout_height="23dp"
            android:id="@+id/textView13" android:textColor="@color/limegreen"
            android:textSize="14sp" android:background="@drawable/rounded_status_completed"
            android:layout_marginEnd="49dp" app:layout_constraintEnd_toEndOf="@+id/include"
            android:layout_marginRight="49dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.981" app:layout_constraintTop_toBottomOf="@+id/textView14"/>

    <TextView
            android:text="@string/item_ProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/textView12" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.143" android:layout_marginTop="24dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/include" android:layout_marginTop="176dp"></View>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="-16dp" android:id="@+id/view" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"></View>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/rounded_status_completed"
            tools:layout_editor_absoluteY="78dp" tools:layout_editor_absoluteX="192dp" android:id="@+id/imageView3"/>
    <ImageView
            android:layout_width="77dp"
            android:layout_height="52dp" app:srcCompat="@drawable/ic_calendar"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/view"/>

</androidx.constraintlayout.widget.ConstraintLayout>